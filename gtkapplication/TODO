libgvc = subproject('json-glib',
  default_options: [
    'package-name=' + meson.project_name(),
    'package-version=' + meson.project_version(),
    # 'pkgdatadir=' + pkgdatadir,
    # 'pkglibdir=' + pkglibdir,
    'static=true',
    'with-introspection=true',
    'buildtype=static_library'
  ]
)


