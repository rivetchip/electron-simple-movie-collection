{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "(gdb) meson:dev",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/devbuild/moviecollection",
            "args": ["--inspect"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/",
            "environment": [],
            "MIMode": "gdb",
            "preLaunchTask": "meson:dev",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}