{
  "name": "electron-test",
  "productName": "Electron tutorial app",
  "description": "Application for electron tutorials",
  "version": "1.0.0",
  "main": "app/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron ./app",
    "dev": "electron ./app --debug",
    "clean": "rm -rf ./release-builds",
    "pack": "npm run clean && npm run pack:linux32 && npm run pack:linux64 && npm run pack:win32 && npm run pack:win64 && npm run pack:osx",
    "pack-linux32": "electron-packager ./app $npm_package_name --out=release-builds --overwrite --asar --platform=linux --arch=ia32 --icon=app-icon.png --prune=true --enable-transparent-visuals --disable-gpu",
    "pack-linux64": "electron-packager ./app $npm_package_name --out=release-builds --overwrite --asar --platform=linux --arch=x64 --icon=app-icon.png --prune=true --enable-transparent-visuals --disable-gpu",
    "pack-win32": "electron-packager ./app $npm_package_name --out=release-builds --overwrite --asar --platform=win32 --arch=ia32 --icon=app-icon.ico --prune=true --version-string.CompanyName='CE' --version-string.FileDescription='Electron app' --version-string.ProductName='Electron app'",
    "pack-win64": "electron-packager ./app $npm_package_name --out=release-builds --overwrite --asar --platform=win32 --arch=x64 --icon=app-icon.ico --prune=true --version-string.CompanyName='CE' --version-string.FileDescription='Electron app' --version-string.ProductName='Electron app'",
    "pack-mac": "electron-packager ./app $npm_package_name --out=release-builds --overwrite --asar --platform=darwin --arch=x64 --icon=app-icon.icns --prune=true"
  },
  "author": "rivetchip",
  "license": "MIT",
  "devDependencies": {
    "asar": "^0.14.3",
    "electron": "^1.8.3",
    "electron-packager": "^11.1.0"
  }
}
