{
  "name": "electron-test",
  "productName": "Movie Collection",
  "description": "Application for electron tutorials",
  "version": "1.0.0",
  "author": "rivetchip",
  "license": "MIT",
  "main": "application/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run bundle && electron .",
    "debug": "electron . --inspect=12345 --debug-brk --debug",
    "serve": "npx parcel ./browser-application/index.html --out-file index --out-dir ./browser-bundle/ --public-url ./ --target electron --port 8080",
    "bundle": "npx parcel build ./browser-application/index.html --out-file index --out-dir ./browser-bundle/ --public-url ./ --target electron --no-source-maps",
    "build-clean": "rm -rf ./release-builds",
    "build-all": "npm run clean && npm run pack:linux32 && npm run pack:linux64 && npm run pack:win32 && npm run pack:win64 && npm run pack:osx",
    "build-linux32": "electron-packager . $npm_package_name --out=release-builds --overwrite --asar --platform=linux --arch=ia32 --icon=app-icon.png --prune=true --enable-transparent-visuals --disable-gpu",
    "build-linux64": "electron-packager . $npm_package_name --out=release-builds --overwrite --asar --platform=linux --arch=x64 --icon=app-icon.png --prune=true --enable-transparent-visuals --disable-gpu",
    "build-win32": "electron-packager . $npm_package_name --out=release-builds --overwrite --asar --platform=win32 --arch=ia32 --icon=app-icon.ico --prune=true --version-string.CompanyName='CE' --version-string.FileDescription='Electron app' --version-string.ProductName='Electron app'",
    "build-win64": "electron-packager . $npm_package_name --out=release-builds --overwrite --asar --platform=win32 --arch=x64 --icon=app-icon.ico --prune=true --version-string.CompanyName='CE' --version-string.FileDescription='Electron app' --version-string.ProductName='Electron app'",
    "build-mac": "electron-packager . $npm_package_name --out=release-builds --overwrite --asar --platform=darwin --arch=x64 --icon=app-icon.icns --prune=true",
    "pack-linux32": "npm run build-clean && npm run bundle && npm run build-linux32",
    "pack-linux64": "npm run build-clean && npm run bundle && npm run build-linux64",
    "pack-win32": "npm run build-clean && npm run bundle && npm run build-win32",
    "pack-win64": "npm run build-clean && npm run bundle && npm run build-win64"
  },
  "devDependencies": {
    "asar": "^0.14.3",
    "electron": "^1.8.4",
    "electron-packager": "^11.2.0",
    "parcel-bundler": "^1.7.0"
  }
}
