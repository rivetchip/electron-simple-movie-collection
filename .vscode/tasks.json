{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(gcc) Build debug",
            "type": "shell",
            "command": "meson --buildtype=debugoptimized builddir",
            "options": {
                "cwd": "${workspaceFolder}/webkit2gtk/",
            }
        },
        {
            "label": "(gcc) Build release",
            "type": "shell",
            "command": "meson --buildtype=release release",
            "options": {
                "cwd": "${workspaceFolder}/webkit2gtk/",
            }
        }
    ]
}