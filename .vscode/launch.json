{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/webkit2gtk/builddir/moviecollection",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/webkit2gtk/builddir/",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "preLaunchTask": "(gcc) Build debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Electron Debug",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "program": "${workspaceFolder}/electron/index.js",
            "protocol": "inspector",
            "console": "internalConsole",
            "outputCapture": "std",
            "sourceMaps": true,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Electron Debug (npm)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "electron-debug"],
            "port": 12345,
            "protocol": "inspector",
            "console": "internalConsole",
            "outputCapture": "std",
            "sourceMaps": true,
        }
    ]
}